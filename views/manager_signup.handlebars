    <div class="column is-half is-offset-one-quarter" style="background-color:grey">
        <form>
            <h2 class="h2"><span class="fancy">M</span>anager<span class="fancy">S</span>ign Up</h2>
            <div class="field">
                <label class="label">First Name:</label>
                <div class="control">
                    <input class="input" type="text" placeholder="Text input" id="manager_firstName">
                </div>
            </div>
            <div class="field">
                <label class="label">Last Name:</label>
                <div class="control">
                    <input class="input" type="text" placeholder="Text input" id="manager_lastName">
                </div>
            </div>
