<div class="row">
    <div class="col-md-6">
        <div class="container">
            <div class="row">
                <h2 class="h1-centre"><span class="fancy">RE</span>Schedule Login</h2>
                <form class="form login-form" id="employee-form">
                    <div class="form-group">
                        <label for="employee-email">Email:</label>
                        <input class="form-input" type="text" id="employee-email" />
                    </div>
                    <div class="form-group">
                        <label for="employee-password">Password:</label>
