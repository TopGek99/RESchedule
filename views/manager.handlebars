<div class="row">
    <div class="col-auto">
        <div class="welcome">
            <h2 class="h2"><span class="fancy">W</span>elcome,</h2>
            <h3 class="h3">{{first_name}} {{last_name}}</h3>
        </div>
    </div>
</div>
{{!--Start of main section of manager--}}
<div class="row mt-8">

    <div class="col-md-6">
            <h2 class="h3">Employee Weekly Availability</h2>
            <div class = "totalHours">
            <table class="table" style="margin:auto">
                <thead>
                    <tr>
                        <th align="center"><abbr title="EmployeeID">Employee ID </abbr></th>
                        <th align="center"><abbr title="FirstName">First Name</abbr></th>
                        <th align="center"><abbr title="SecondName">Last Name</abbr></th>
                        <th align="center"><abbr title="Email">Email</abbr></th>
                        <th align="center"><abbr title="Availability">Available Hours</abbr></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each employees as |employee|}}
                    <tr>
                        <th>{{id}}</th>
                        <td>{{first_name}}</td>
                        <td>{{last_name}}</td>
                        <td>{{email}}</td>
                        <td>{{availability}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
</div>
        </div>
    </div>
    {{!--Creates task for employee--}}
    <div class="col-md-6">
        <div id="assign-task" class = "assign-task">
            <form id="create_task" style="margin:auto">
                <div class="field">
                    <h3 class = "h3"><span class = "fancy">C</span>reate Task</h3>
                </div>
                <h3 class = "h3.left">Employee </h3>
                <div class="field">
                    
                    <div class="select is-normal">
                        <select id="manager_employee">
                            {{#each employees as |employee|}}
                            <option value="{{employee.id}}">
                                {{employee.first_name}} {{employee.last_name}}
                            </option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <input type="datetime" name="schedule" id="schedule">
                <button class="btn btn-primary" id="confirm">Confirm Dates</button>
                <div class="field">
                    <label for="task-title">Task: </label>
                    <input type="text" name="task-title" id="task-title">
                </div>
                <div class="field">
                    <button type="submit" class="btn btn-primary" id="task-button">Create Task</button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>


<script src="js/manager_logout.js"></script>
<script src="js/calendar.js"></script>
<script src="js/create_task.js"></script>